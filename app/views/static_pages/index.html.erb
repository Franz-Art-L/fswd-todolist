<%= javascript_pack_tag 'index', 'data-turbolinks-track': 'reload' %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mt-4">To Do List</h1>
           
                        <div>
                            <form id="addTask" class="form-style"> 
                                <input  id="taskInput"  type="text" placeholder="Things need to be done" required/>
                                <button id="addTaskButton" class="btn btn-success btn-md btn-add" title="click to add task">➕</button>
                            </form>
                        </div>
                <br>
                    <div id="todo-list-wrapper">

                       <div class="row">
                            <div class="col" id="tasks">
                            
                            </div>
                        </div>
                        <div class="col-xs-12 d-flex justify-content-around">
                            <div id="toggleButtons">
                                <button id="allTasksShow" class="btn btn-warning">All</button>
                                <button id="activeTasksButton" class="btn btn-warning">Active</button>
                                <button id="completedTasksButton" class="btn btn-warning">Completed</button>
                            </div>
                        </div>
                        
                        <br>

                        <div class="col-xs-12 d-flex justify-content-around">
                            
                            <div>☑️ = Completed</div> 
                        </div>
                        
                    </div>
                
                <br>
        

        </div>
    </div>
</div>

